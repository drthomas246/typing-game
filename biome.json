{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },

  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!node_modules",
      "!dist",
      "!build",
      "!coverage",
      "!docs/api",
      "!.next",
      "!.vite",
      "!.turbo",
      "!**/__mocks__",
      "!**/*.stories.*",
      "!**/*.story.*"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineEnding": "lf",
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "useImportType": "error"
      },
      "complexity": {
        "noUselessSwitchCase": "error",
        "noExtraBooleanCast": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },

  "overrides": [
    {
      "includes": ["**/*.ts", "**/*.tsx"],
      "linter": {
        "rules": {
          "style": { "useImportType": "error" }
        }
      }
    },
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**"
      ],
      "linter": {
        "rules": {
          "correctness": { "noUnusedVariables": "warn" }
        }
      }
    }
  ],

  "javascript": {
    "globals": ["window", "document"],
    "formatter": { "quoteStyle": "double" }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": { "organizeImports": "on" }
    }
  }
}
